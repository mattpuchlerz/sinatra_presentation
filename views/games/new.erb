<h1>New Game</h1>

<ul>
  <li><a href="/games">Back to Games</a></li>
</ul>

<form action="/games" method="post">
  
  <dl>
    <dt><label for="hits">Hits</label></dt>
    <dd><input id="hits" type="text" name="hits" value="<%= @game.hits %>" size="35" /></dd>
  </dl>

  <p>
    <input type="submit" value="Save" />
  </p>
  
</form>